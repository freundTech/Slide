<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <EditText
        android:id="@+id/secrettext_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/encrypttext"
        android:enabled="true"
        android:textColor="?attr/font"
        android:theme="@style/ReplyEditTextTheme"/>

    <EditText
        android:id="@+id/publictext_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/publictext"
        android:enabled="true"
        android:textColor="?attr/font"
        android:theme="@style/ReplyEditTextTheme"/>

    <RelativeLayout
            android:id="@+id/encryptfor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="?android:selectableItemBackground"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:theme="@style/ReplyEditTextTheme">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/encryptfor"
                    android:textColor="?attr/font"
                    android:textSize="14sp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha=".86"
                    android:id="@+id/encryptfor_current"
                    android:textColor="?attr/font"
                    android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>